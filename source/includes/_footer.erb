<%
  @links = {
    Компания: [
      {
        name: 'О компании',
        url: 'https://loona.ai/about'
      },
      {
        name: 'Контакы',
        url: 'https://loona.ai/team'
      },
      {
        name: 'Возможности',
        url: 'https://loona.ai/cards'
      },
      {
        name: 'Блог',
        url: 'https://loona.ai/blog'
      },
    ],
    Помощь_и_Обучение: [
      {
        name: 'Контакты',
        url: 'https://loona.ai/contacts'
      }
    ],
    Сотрудничество: [
      {
        name: 'Маркетологам из компаний',
        url: 'https://loona.ai/collaboration-marketers-from-companies'
      },
      {
        name: 'ИТ компаниям и разработчикам',
        url: 'https://loona.ai/collaboration-it-developers'
      },
      {
        name: 'Маркетинговым агенствам',
        url: 'https://loona.ai/collaboration-marketing-agencies'
      },
      {
        name: 'Частным маркетологам',
        url: 'https://loona.ai/collaboration-private-marketers'
      }
    ]
  }
%>
<div class="feedback-banner">
    <h3>
      Мы открыты для сотрудничества, свяжитесь с нами!
    </h3>
    <a target="_blank" href="https://loona.ai/sitemap/collaboration" class="btn btn-big btn-primary" >
      Сотрудничать
    </a>
</div>
<div class="base__footer">
  <div class="footer-wrapper">
    <div class="container">
      <div class="row">
        <% @links.each_pair do |key, value| %>
          <div class="col-3">
          <h4><%= key.to_s.titleize %></h4>
            <ul class="link-list">
              <% value.each do |link| %>
                <li><a href="<%= link[:url] %>" target="_blank"><%= link[:name] %></a></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="col-3">
          <a target="_blank" href="https://loona.ai/blog" class="btn btn-big btn-primary" >
            Следите за нашей деятельностью
          </a>
          <legend>
            Читайте новости и информацию о деятельности компании LOONA в нашем Блоге!
          </legend>
        </div>
      </div>
    </div>
  </div>
</div>
